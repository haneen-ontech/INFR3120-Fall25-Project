<%- include ../partials/header.ejs %> <!--The header-->
<%- include ../partials/main_nav.ejs %> <!--The main navigation bar-->

<main class="container my-5"> <!--Main container-->
        <div class="center-wrapper"> <!--Center wrapper to center the card-->
    <% if(message.length > 0) { %> <!--If there is a message to show-->
        <div class="alert alter danger"> 
            <% message %> <!--Display the message-->
        </div>
    <%}%>
    <div class="row"> <!--Row for layout-->
    <div class="offset-md-3 col-md-6"> <!--Centered column-->
        <div class="card mx-auto" style="min-height: 500px; background-color: #113675; box-shadow: 0 0 20px #FADB2d;"> <!--Card with styling-->
            <div class="card-body text-center" style="padding-top: 80px;"> <!--Card body-->
            <h1 class="logingtitle text-center mb-4" style="font-weight: bold; color: white">Please login</h1> <!--Login title-->
            <div class="mx-auto" style="width: 100%; max-width: 350px;"> <!--Form container with max width-->
            <form method="post" autocomplete="off"> <!--Login form-->
                <fieldset class="form-group mb-3" style="color: white; "> <!--Username fieldset-->
                    <label for="username"> Enter Username:</label> <!--Username label-->
                    <input type="text" class="form-control" name="username" placeholder="Enter username" id="username" required autofocus> <!--Username input-->
                </fieldset>
                <fieldset class="form-group " style="color: white;"> <!--Password fieldset-->
                    <label for="password">Enter Password:</label> <!--Password label-->
                    <input type="password" class="form-control" name="password" placeholder="Enter password" id="password" required> <!--Password input-->
                    <div class="mt-4">  <!--Margin top for spacing-->
                        <a href="/register" class="btn btn-secondary">Register here</a> <!--Link to registration page-->
                   </div>
                </fieldset>
                <fieldset class="form-group text-center mt-3"> <!--Submit and cancel buttons-->
                    <input type="submit" class="btn btn-primary" value="Login"> <!--Login button-->
                    <a href="/" class="btn btn-warning">Cancel</a> <!--Cancel button-->
                </fieldset>

            </form>
        </div>
        </div>
        </div>
    </div>
    </div>
</main>
<%- include ../partials/footer.ejs %> <!--The footer-->